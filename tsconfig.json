{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "sourceMap": true,
    "listEmittedFiles": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules", "src/**/*.test.*"],
  "include": ["src"]
}
